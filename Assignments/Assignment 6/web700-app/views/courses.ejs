<div class="row">
    <div class="col-md-12">
        <br>
        <h2>Courses 
            <a href="/courses/add" class="btn btn-success float-right">Add New Course</a>
        </h2>
        <hr />

        <% if (courses && courses.length > 0) { %>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Course Code</th>
                        <th>Course Description</th>
                    </tr>
                </thead>
                <tbody>
                    <% courses.forEach(course => { %>
                    <tr>
                        <td>
                            <a href="/course/<%= course.courseId %>">
                                <%= course.courseCode %>
                            </a>
                        </td>
                        <td>
                            <a href="/students?course=<%= course.courseId %>">
                                <%= course.courseDescription %>
                            </a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <% } else { %>
        <div class="col-md-12 text-center">
            <strong>No courses available</strong>
        </div>
        <% } %>
    </div>
</div>
